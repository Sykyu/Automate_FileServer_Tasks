set path1="容量を取得するファイルが格納されている場所"
set path2="出力結果一時格納場所"
set path3="出力結果格納場所"

rem ------ 容量取得実行 -----------------------------------------------------------------
forfiles /s /p %path1%  /c "cmd /c if @fsize gtr 1073741824 echo @FNAME @FSIZE >> %path2%"

rem ------ 一覧を複写 -------------------------------------------------------------------
copy %path2% %path3%

